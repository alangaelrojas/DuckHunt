<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
		android:background="@drawable/bg_game">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.137"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView"/>

	<EditText

			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:hint="@string/nick"
			app:layout_constraintTop_toBottomOf="@+id/imageView"
			android:layout_marginTop="40dp"
			app:layout_constraintEnd_toEndOf="@+id/imageView"
			app:layout_constraintStart_toStartOf="@+id/imageView"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:id="@+id/edtNickname"/>

	<Button
			android:id="@+id/btnStart"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:layout_margin="10dp"
			android:text="@string/start" android:layout_marginTop="48dp"
			app:layout_constraintTop_toBottomOf="@+id/edtNickname" app:layout_constraintStart_toStartOf="@+id/edtNickname"
			app:layout_constraintEnd_toEndOf="@+id/edtNickname" android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
			android:backgroundTint="@color/colorPrimary"
			android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>